
@model IEnumerable<Kategori>

<h1 style="font-weight:700;">İçerik Güncelleme ve Silme İşlemi</h1>
<table class="table shadow m-3" style="background-color:lightgray">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kategori Adı</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CategoryName</td>
              
                <td>
                    <a class="btn btn-danger" asp-action="KategoriDelete" asp-route-id="@item.Id">Delete</a>
                    <a class="btn btn-secondary" asp-action="Kategori" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>