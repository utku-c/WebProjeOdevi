
@model IEnumerable<Content>


<h1 style="font-weight:700;">İçerik Güncelleme ve Silme İşlemi</h1>
<table class="table shadow m-3" style="background-color:lightgray">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">KonuBasligi</th>
            <th scope="col">Icerik</th>
            <th scope="col">Aciklama</th>
            <th scope="col">ContentResimUrl</th>
            <th scope="col">CategoryId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.KonuBasligi</td>
                <td>@item.Icerik</td>
                <td>@item.Aciklama</td>
                <td>@item.ContentResimUrl</td>
                <td>@item.CategoryId</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a class="btn btn-secondary" asp-action="Content" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>